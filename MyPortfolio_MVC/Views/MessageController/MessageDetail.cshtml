@model MyPortfolio_MVC.Models.TblMessage
@{
    ViewBag.Title = "MessageDetail";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<h2>Mesaj İçeriği</h2>
<br />

<table class="table table-striped">
    <tr>
        <th>Göderen Ad Soyad: </th>
        <td>@Model.Name</td>
    </tr>

    <tr>
        <th>Göderen Email: </th>
        <td>@Model.Email</td>
    </tr>

    <tr>
        <th>Mesaj İçeriği: </th>
        <td>@Model.MessageContent</td>
    </tr>
</table>
<br />
<a href="/MessageController/Index" class="btn btn-primary">Mesajlara Geri Dön</a>

